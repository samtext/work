<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>Auri Online Services - Official Receipt</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/qrcodejs/1.0.0/qrcode.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>
    
    <style>
        :root { --auri-green: #007f3f; --auri-blue: #1a4a8e; --auri-red: #dc3545; }
        body { background-color: #f8f9fa; font-family: sans-serif; }
        
        /* Generator View Styling */
        .generator-container { width: 100%; max-width: 380px; margin: 20px auto; padding: 0 10px; }
        .gen-card { border: none; border-radius: 15px; box-shadow: 0 10px 30px rgba(0,0,0,0.1); background: #fff; overflow: hidden; }
        
        #status-banner { 
            background-color: var(--auri-red); color: white; padding: 15px; 
            text-align: center; font-weight: 800; text-transform: uppercase;
        }
        .dots::after { content: ''; animation: blink 1.5s infinite step-start; }
        @keyframes blink { 0% { content: ''; } 25% { content: '.'; } 50% { content: '..'; } 75% { content: '...'; } }

        .logo-box { font-size: 2.5rem; font-weight: 900; display: flex; justify-content: center; align-items: center; margin-top: 15px; }
        .logo-p { color: var(--auri-blue); }
        .logo-arrow { color: var(--auri-green); margin-left: -5px; }

        .form-label { font-size: 0.7rem; font-weight: 700; color: #555; text-transform: uppercase; margin-top: 10px; }
        .btn-black { background: #000; color: #fff; font-weight: 700; padding: 12px; border: none; }
        .btn-outline { background: #fff; color: #000; font-weight: 700; padding: 12px; border: 2px solid #000; }
        .btn-share { background: var(--auri-green); color: #fff; font-weight: 700; padding: 12px; border: none; }

        /* Hidden Receipt Template (Matches your image exactly) */
        #receipt-render-area { 
            width: 400px; background: #fff; position: absolute; left: -9999px; top: 0; padding: 0; 
        }
        .r-header { background: var(--auri-green); color: white; padding: 12px; text-align: center; font-weight: bold; font-size: 1.2rem; }
        .r-body { padding: 25px; text-align: center; }
        .r-title { font-weight: 900; font-size: 1.1rem; margin-bottom: 5px; }
        .r-date { font-size: 0.8rem; color: #444; margin-bottom: 15px; }
        .r-id-box { border: 1.5px dashed #666; padding: 15px; border-radius: 12px; font-family: monospace; font-weight: bold; font-size: 0.9rem; margin-bottom: 20px; word-break: break-all; }
        .r-table { width: 100%; border-top: 1px dashed #000; padding-top: 10px; font-family: monospace; text-align: left; }
        .r-row { display: flex; justify-content: space-between; margin-bottom: 8px; }
    </style>
</head>
<body>

<div class="generator-container">
    <div class="gen-card">
        <div id="status-banner">Processing Receipt<span class="dots"></span></div>
        <div class="p-4">
            <div class="logo-box"><span class="logo-p">P</span><span class="logo-arrow">âž¤</span></div>
            <h5 class="text-center fw-bold">AURI ONLINE SERVICES</h5>
            
            <label class="form-label">Telephone</label>
            <input type="text" id="utel" class="form-control bg-light" readonly placeholder="Waiting for payment...">
            
            <label class="form-label">Amount</label>
            <input type="text" id="uamount" class="form-control bg-light" readonly placeholder="...">

            <hr>

            <label class="form-label">Full Name</label>
            <input type="text" id="fname" class="form-control" placeholder="Enter full name">

            <label class="form-label">Email Address</label>
            <input type="email" id="uemail" class="form-control" placeholder="customer@mail.com">

            <div class="d-grid gap-2 mt-4">
                <button class="btn btn-black" onclick="processReceipt('pdf')">DOWNLOAD PDF</button>
                <button class="btn btn-outline" onclick="processReceipt('jpeg')">DOWNLOAD JPEG</button>
                <button class="btn btn-share" onclick="processReceipt('share')">SHARE RECEIPT</button>
            </div>
            
            <div class="text-center mt-4">
                <p class="small text-muted mb-0">Powered by <strong>XECO PAY</strong></p>
            </div>
        </div>
    </div>
</div>

<div id="receipt-render-area">
    <div class="r-header">RECEIPT PAID</div>
    <div class="r-body">
        <div class="r-title">AURI ONLINE SERVICES</div>
        <div class="r-date" id="r-out-date"></div>
        
        <p class="small mb-1">Transaction ID</p>
        <div class="r-id-box" id="r-out-id"><%= checkoutId %></div>

        <div class="r-table">
            <div class="r-row"><span>Customer Name</span><span id="r-out-name"></span></div>
            <div class="r-row"><span>Phone Number</span><span id="r-out-phone"></span></div>
            <hr style="border-top: 1px dashed #000;">
            <div class="r-row"><span>Amount</span><span id="r-out-amt"></span></div>
            <div class="r-row"><span>Tax</span><span>0.00 KES</span></div>
            <div class="r-row" style="font-weight: bold; font-size: 1.1rem; margin-top: 5px;">
                <span>Total</span><span id="r-out-total"></span>
            </div>
        </div>

        <div id="qr-target" class="d-flex justify-content-center mt-4"></div>
        <p style="font-size: 0.6rem; font-weight: bold; margin-top: 10px; letter-spacing: 1px;">VERIFIED BY XECO PAY</p>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2"></script>
<script>
    const _supabase = supabase.createClient("<%= env.SUPABASE_URL %>", "<%= env.SUPABASE_ANON_KEY %>");
    const checkoutId = "<%= checkoutId %>";

    async function fetchPaymentDetails() {
        const banner = document.getElementById('status-banner');
        setTimeout(async () => {
            const { data } = await _supabase.from('transactions').select('phone_number, amount').eq('checkout_request_id', checkoutId).single();
            if (data) {
                document.getElementById('utel').value = data.phone_number;
                document.getElementById('uamount').value = data.amount + " KES";
                banner.innerHTML = "RECEIPT PAID";
                banner.style.backgroundColor = "var(--auri-green)";
                
                // Pre-generate QR for the receipt
                new QRCode(document.getElementById("qr-target"), { text: window.location.href, width: 80, height: 80 });
            }
        }, 5000); 
    }
    window.onload = fetchPaymentDetails;

    async function processReceipt(mode) {
        const name = document.getElementById('fname').value;
        const email = document.getElementById('uemail').value;
        const phone = document.getElementById('utel').value;

        // Validation
        if(!phone || phone === "Waiting for payment...") return alert("Payment is still processing...");
        if(!name || !email) return alert("Please enter Full Name and Email Address.");

        // Map to Template
        document.getElementById('r-out-date').innerText = new Date().toLocaleString();
        document.getElementById('r-out-name').innerText = name.toUpperCase();
        document.getElementById('r-out-phone').innerText = phone;
        document.getElementById('r-out-amt').innerText = document.getElementById('uamount').value;
        document.getElementById('r-out-total').innerText = document.getElementById('uamount').value;

        if (mode === 'pdf') {
            downloadPDF(name);
        } else {
            const canvas = await html2canvas(document.getElementById('receipt-render-area'), { scale: 3 });
            if (mode === 'jpeg') {
                const link = document.createElement('a');
                link.download = `Auri_Receipt_${checkoutId}.jpg`;
                link.href = canvas.toDataURL("image/jpeg", 0.9);
                link.click();
            } else if (mode === 'share') {
                canvas.toBlob(async (blob) => {
                    const file = new File([blob], 'Receipt.jpg', { type: 'image/jpeg' });
                    if (navigator.canShare && navigator.canShare({ files: [file] })) {
                        navigator.share({ files: [file], title: 'Auri Online Services Receipt' });
                    } else { alert("Share not supported. Please Download."); }
                });
            }
        }
    }

    function downloadPDF(name) {
        const { jsPDF } = window.jspdf;
        const doc = new jsPDF({ unit: 'mm', format: [100, 150] });
        
        // Match the layout of the reference image
        doc.setFillColor(0, 127, 63); doc.rect(0, 0, 100, 15, 'F');
        doc.setTextColor(255); doc.setFontSize(14); doc.text("RECEIPT PAID", 50, 10, { align: "center" });

        doc.setTextColor(0); doc.setFontSize(10); doc.text("AURI ONLINE SERVICES", 50, 25, { align: "center" });
        doc.setFontSize(7); doc.text(new Date().toLocaleString(), 50, 29, { align: "center" });

        doc.setLineDashPattern([2, 1], 0); doc.roundedRect(10, 35, 80, 15, 3, 3);
        doc.text("Transaction ID", 50, 34, { align: "center" });
        doc.setFont("courier", "bold"); doc.text(checkoutId, 50, 44, { align: "center" });

        doc.setFont("courier", "normal"); doc.setLineDashPattern([1, 1], 0); doc.line(10, 58, 90, 58);
        doc.text("Customer: " + name.toUpperCase(), 10, 65);
        doc.text("Phone:    " + document.getElementById('utel').value, 10, 72);
        doc.line(10, 78, 90, 78);
        doc.text("TOTAL:    " + document.getElementById('uamount').value, 10, 85);
        
        doc.save(`Receipt_${checkoutId}.pdf`);
    }
</script>
</body>
</html>
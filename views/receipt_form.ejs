<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>Auri Online Services - Receipt Generator</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/qrcodejs/1.0.0/qrcode.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>
    
    <style>
        :root { --auri-green: #007f3f; --auri-blue: #1a4a8e; --auri-red: #dc3545; }
        body { background-color: #f0f2f5; font-family: 'Segoe UI', sans-serif; }
        
        /* GENERATOR UI (AS SHOWN IN YOUR UPLOAD) */
        .receipt-wrapper { width: 100%; max-width: 380px; margin: 15px auto; padding: 0 10px; }
        .card { border: none; border-radius: 12px; box-shadow: 0 8px 20px rgba(0,0,0,0.1); background: #fff; overflow: hidden; }
        #status-banner { background-color: var(--auri-red); color: white; padding: 12px; font-weight: 800; text-align: center; text-transform: uppercase; font-size: 1rem; }
        .dots::after { content: ''; animation: blink 1.5s infinite step-start; }
        @keyframes blink { 0% { content: ''; } 25% { content: '.'; } 50% { content: '..'; } 75% { content: '...'; } }
        .logo-box { font-size: 2.2rem; font-weight: 900; display: flex; justify-content: center; align-items: center; margin-top: 10px; }
        .logo-p { color: var(--auri-blue); }
        .logo-arrow { color: var(--auri-green); margin-left: -5px; }
        .btn-main { background-color: #000; color: #fff; border: none; padding: 12px; font-weight: 700; border-radius: 6px; }
        .btn-sub { background-color: #fff; border: 1.5px solid #000; color: #000; padding: 12px; font-weight: 700; border-radius: 6px; }
        .form-label { font-size: 0.7rem; font-weight: 800; color: #666; text-transform: uppercase; margin-bottom: 4px; }
        .form-control-receipt { border: 1px solid #e0e0e0; padding: 10px; font-weight: 700; font-size: 0.95rem; border-radius: 6px; background-color: #f9f9f9; }

        /* THE RECEIPT STYLE YOU REQUESTED (HIDDEN FROM UI) */
        #official-receipt-style { 
            width: 450px; background: white; position: absolute; left: -9999px; top: 0; padding-bottom: 30px;
        }
        .r-header { background: var(--auri-green); color: white; padding: 18px; text-align: center; font-weight: bold; font-size: 1.6rem; }
        .r-body { padding: 35px; text-align: center; }
        .r-company { font-weight: 900; font-size: 1.4rem; margin-top: 10px; color: #000; text-transform: uppercase; }
        .r-date { font-size: 0.85rem; color: #333; margin-bottom: 15px; }
        .r-id-label { font-size: 0.8rem; color: #555; font-weight: bold; }
        .r-id-box { border: 2px dashed #444; padding: 18px; border-radius: 15px; font-family: 'Courier New', Courier, monospace; font-weight: 900; font-size: 1rem; margin: 5px 0 25px 0; word-break: break-all; }
        .r-table { width: 100%; border-top: 1.5px dashed #000; margin-top: 15px; padding-top: 15px; font-family: 'Courier New', Courier, monospace; text-align: left; }
        .r-row { display: flex; justify-content: space-between; margin-bottom: 12px; font-size: 1.05rem; }
        .r-footer { font-size: 0.75rem; font-weight: 900; margin-top: 25px; text-transform: uppercase; letter-spacing: 1.5px; }
    </style>
</head>
<body>

<div class="receipt-wrapper">
    <div class="card">
        <div id="status-banner">Processing Receipt<span class="dots"></span></div>
        <div class="p-4">
            <div class="text-center mb-3">
                <div class="logo-box"><span class="logo-p">P</span><span class="logo-arrow">âž¤</span></div>
                <h5 class="fw-bold m-0">AURI ONLINE SERVICES</h5>
                <p class="text-muted small mb-0" id="ui-clock"></p>
            </div>
            
            <div class="mb-3 text-center">
                <label class="form-label">Transaction ID</label>
                <div style="border: 1px dashed #ccc; padding: 8px; border-radius: 8px; background: #fafafa; font-family: monospace; font-size: 0.8rem; font-weight: bold;"><%= checkoutId %></div>
            </div>

            <div class="row mb-3 g-2">
                <div class="col-7">
                    <label class="form-label">Telephone</label>
                    <input type="text" id="utel" class="form-control form-control-receipt" readonly placeholder="...">
                </div>
                <div class="col-5">
                    <label class="form-label">Amount</label>
                    <input type="text" id="uamount" class="form-control form-control-receipt" readonly placeholder="...">
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">Full Name</label>
                <input type="text" id="fname" class="form-control form-control-receipt" style="background-color: white;" placeholder="e.g. Samuel Chaga">
            </div>

            <div class="mb-4">
                <label class="form-label">Email Address</label>
                <input type="email" id="uemail" class="form-control form-control-receipt" style="background-color: white;" placeholder="customer@mail.com">
            </div>

            <div class="d-grid gap-2">
                <button class="btn btn-main" onclick="processReceipt('pdf')">DOWNLOAD PDF</button>
                <button class="btn btn-sub" onclick="processReceipt('jpeg')">DOWNLOAD JPEG</button>
            </div>
            
            <p class="text-center mt-4 mb-0" style="font-size: 0.7rem; font-weight: 900; color: #444;">VERIFIED BY XECO PAY</p>
        </div>
    </div>
</div>

<div id="official-receipt-style">
    <div class="r-header">RECEIPT PAID</div>
    <div class="r-body">
        <div class="r-company">AURI ONLINE SERVICES</div>
        <div class="r-date" id="r-out-date"></div>
        
        <div class="r-id-label">Transaction ID</div>
        <div class="r-id-box"><%= checkoutId %></div>

        <div class="r-table">
            <div class="r-row"><span>Customer:</span><span id="r-out-name"></span></div>
            <div class="r-row"><span>Phone:</span><span id="r-out-phone"></span></div>
            <hr style="border-top: 1.5px dashed #000; margin: 15px 0;">
            <div class="r-row" style="font-weight: 900; font-size: 1.2rem;">
                <span>TOTAL:</span><span id="r-out-total"></span>
            </div>
            <hr style="border-top: 1.5px dashed #000; margin: 15px 0;">
        </div>

        <div id="r-qr" class="d-flex justify-content-center mt-3"></div>
        <div class="r-footer">VERIFIED BY XECO PAY</div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2"></script>
<script>
    const _supabase = supabase.createClient("<%= env.SUPABASE_URL %>", "<%= env.SUPABASE_ANON_KEY %>");
    const checkoutId = "<%= checkoutId %>";
    let isPaid = false;

    function startClock() { document.getElementById('ui-clock').innerText = new Date().toLocaleString(); }
    setInterval(startClock, 1000); startClock();

    async function checkStatus() {
        const banner = document.getElementById('status-banner');
        setTimeout(async () => {
            const { data } = await _supabase.from('transactions').select('phone_number, amount').eq('checkout_request_id', checkoutId).single();
            if (data) {
                isPaid = true;
                document.getElementById('utel').value = data.phone_number;
                document.getElementById('uamount').value = data.amount + " KES";
                banner.innerHTML = "RECEIPT PAID"; banner.style.backgroundColor = "var(--auri-green)";
                new QRCode(document.getElementById("r-qr"), { text: window.location.href, width: 100, height: 100 });
            }
        }, 4000); 
    }
    window.onload = checkStatus;

    async function processReceipt(type) {
        const name = document.getElementById('fname').value;
        const email = document.getElementById('uemail').value;

        if (!isPaid) return alert("Payment is still processing...");
        if (!name || !email) return alert("Name and Email are required to generate the receipt.");

        // Fill receipt design
        document.getElementById('r-out-date').innerText = new Date().toLocaleString();
        document.getElementById('r-out-name').innerText = name.toUpperCase();
        document.getElementById('r-out-phone').innerText = document.getElementById('utel').value;
        document.getElementById('r-out-total').innerText = document.getElementById('uamount').value;

        const target = document.getElementById('official-receipt-style');

        if (type === 'pdf') {
            const { jsPDF } = window.jspdf;
            const doc = new jsPDF({ unit: 'mm', format: [100, 150] });
            const canvas = await html2canvas(target, { scale: 2 });
            doc.addImage(canvas.toDataURL('image/jpeg', 1.0), 'JPEG', 0, 0, 100, 150);
            doc.save(`Auri_Receipt_${checkoutId}.pdf`);
        } else {
            const canvas = await html2canvas(target, { scale: 3 });
            const link = document.createElement('a');
            link.download = `Auri_Receipt_${checkoutId}.jpg`;
            link.href = canvas.toDataURL("image/jpeg", 0.9);
            link.click();
        }
    }
</script>
</body>
</html>
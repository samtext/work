<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>Xeco Developers - Receipt</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/qrcodejs/1.0.0/qrcode.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>
    
    <style>
        :root { --xeco-blue: #1a4a8e; --xeco-green: #007f3f; --xeco-red: #dc3545; }
        
        body { background-color: #f0f2f5; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; }
        
        /* Mobile Optimization: Narrower card for better phone viewing */
        .receipt-wrapper { 
            width: 100%; 
            max-width: 400px; /* Reduced width for phone screens */
            margin: 20px auto; 
            padding: 0 15px;
        }
        
        .card { border: none; border-radius: 12px; overflow: hidden; box-shadow: 0 8px 24px rgba(0,0,0,0.12); background: #fff; }

        #status-banner { 
            background-color: var(--xeco-red); 
            color: white; 
            padding: 14px; 
            font-weight: 800; 
            text-align: center; 
            text-transform: uppercase; 
            font-size: 1.1rem;
            transition: background-color 0.8s ease;
        }

        .dots::after { content: ''; animation: blink 1.5s infinite step-start; }
        @keyframes blink { 0% { content: ''; } 25% { content: '.'; } 50% { content: '..'; } 75% { content: '...'; } }
        
        .logo-box { font-size: 2.8rem; font-weight: 900; display: flex; justify-content: center; align-items: center; }
        .logo-p { color: var(--xeco-blue); }
        .logo-arrow { color: var(--xeco-green); margin-left: -5px; }

        .btn-main { background-color: #000; color: #fff; border: none; padding: 12px; font-weight: 700; border-radius: 6px; font-size: 0.9rem; }
        .btn-sub { background-color: #fff; border: 1.5px solid #000; color: #000; padding: 12px; font-weight: 700; border-radius: 6px; font-size: 0.9rem; }
        
        .form-label { font-size: 0.7rem; font-weight: 800; color: #666; text-transform: uppercase; margin-bottom: 4px; }
        .form-control-receipt { border: 1px solid #e0e0e0; padding: 10px; font-weight: 700; font-size: 0.95rem; border-radius: 6px; }
    </style>
</head>
<body>

<div class="receipt-wrapper">
    <div class="card" id="receipt-card">
        <div id="status-banner">Processing Receipt<span class="dots"></span></div>
        
        <div class="p-4">
            <div class="text-center mb-3">
                <div class="logo-box">
                    <span class="logo-p">P</span><span class="logo-arrow">âž¤</span>
                </div>
                <h5 class="fw-bold m-0" style="letter-spacing: 0.5px;">XECO DEVELOPERS</h5>
                <p class="text-muted small mb-0" id="live-clock">Loading time...</p>
            </div>
            
            <div class="mb-3 text-center">
                <label class="form-label">Transaction ID</label>
                <div style="border: 1.5px dashed #ccc; padding: 10px; border-radius: 10px; background: #fafafa; font-family: monospace; font-weight: bold; font-size: 0.85rem;">
                    <%= checkoutId %>
                    <input type="hidden" id="rid" value="<%= checkoutId %>">
                </div>
            </div>

            <div class="row mb-3 g-2">
                <div class="col-7">
                    <label class="form-label">Telephone</label>
                    <input type="text" id="utel" class="form-control form-control-receipt bg-light" readonly placeholder="...">
                </div>
                <div class="col-5">
                    <label class="form-label">Amount</label>
                    <input type="text" id="uamount" class="form-control form-control-receipt bg-light" readonly placeholder="...">
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">Full Name</label>
                <input type="text" id="fname" class="form-control form-control-receipt" placeholder="e.g. Samuel Chaga">
            </div>

            <div class="mb-4">
                <label class="form-label">Email Address</label>
                <input type="email" id="uemail" class="form-control form-control-receipt" placeholder="customer@mail.com">
            </div>

            <div class="d-grid gap-2" id="action-buttons">
                <button class="btn btn-main" onclick="downloadPDF()">DOWNLOAD PDF</button>
                <button class="btn btn-sub" onclick="downloadJPEG()">DOWNLOAD JPEG</button>
            </div>
            
            <div class="text-center mt-4">
                <div id="qr-container" class="d-flex justify-content-center mb-2"></div>
                <p style="font-size: 0.6rem; font-weight: 800; color: #444; letter-spacing: 1px;">VERIFIED BY XECO PAY</p>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2"></script>
<script>
    const _supabase = supabase.createClient("<%= env.SUPABASE_URL %>", "<%= env.SUPABASE_ANON_KEY %>");
    
    function updateClock() {
        const now = new Date();
        document.getElementById('live-clock').innerText = now.toLocaleString();
    }
    setInterval(updateClock, 1000);
    updateClock();

    async function fetchTransaction() {
        const rid = document.getElementById('rid').value;
        const banner = document.getElementById('status-banner');

        setTimeout(async () => {
            const { data } = await _supabase
                .from('transactions')
                .select('phone_number, amount')
                .eq('checkout_request_id', rid)
                .single();

            if (data) {
                document.getElementById('utel').value = data.phone_number;
                document.getElementById('uamount').value = data.amount + " KES";
                banner.innerHTML = "RECEIPT PAID";
                banner.style.backgroundColor = "var(--xeco-green)";

                new QRCode(document.getElementById("qr-container"), {
                    text: window.location.href,
                    width: 70, height: 70
                });
            }
        }, 5000); 
    }
    window.onload = fetchTransaction;

    function downloadJPEG() {
        const buttons = document.getElementById('action-buttons');
        buttons.style.display = 'none';
        
        html2canvas(document.getElementById('receipt-card'), { scale: 3 }).then(canvas => {
            const link = document.createElement('a');
            link.download = `Receipt_${Date.now()}.jpg`;
            link.href = canvas.toDataURL("image/jpeg", 0.9);
            link.click();
            buttons.style.display = 'grid';
        });
    }

    function downloadPDF() {
        const { jsPDF } = window.jspdf;
        const doc = new jsPDF({ unit: 'mm', format: [100, 160] });
        const rid = document.getElementById('rid').value;
        const name = document.getElementById('fname').value || 'N/A';
        const tel = document.getElementById('utel').value;
        const amt = document.getElementById('uamount').value;

        // Visual design mimicking the Axis/Acme sample
        doc.setFillColor(0, 127, 63); 
        doc.rect(0, 0, 100, 15, 'F');
        doc.setTextColor(255); doc.setFontSize(14); doc.text("RECEIPT PAID", 50, 10, { align: "center" });

        doc.setTextColor(0); doc.setFontSize(10); doc.text("XECO DEVELOPERS", 50, 25, { align: "center" });
        doc.setFontSize(7); doc.text(new Date().toLocaleString(), 50, 29, { align: "center" });
        
        doc.setLineDashPattern([2, 1], 0);
        doc.roundedRect(10, 35, 80, 15, 3, 3);
        doc.text("Transaction ID", 50, 34, { align: "center" });
        doc.setFont("courier", "bold"); doc.text(rid, 50, 44, { align: "center" });

        doc.setFont("courier", "normal"); doc.setLineDashPattern([1, 1], 0);
        doc.line(10, 58, 90, 58);
        doc.text("Customer Name", 10, 65); doc.text(name.toUpperCase(), 90, 65, { align: "right" });
        doc.text("Phone Number", 10, 72); doc.text(tel, 90, 72, { align: "right" });
        doc.line(10, 78, 90, 78);
        doc.text("Amount", 10, 85); doc.text(amt, 90, 85, { align: "right" });
        doc.text("Tax", 10, 92); doc.text("0.00 KES", 90, 92, { align: "right" });
        doc.setFont("courier", "bold"); doc.text("Total", 10, 100); doc.text(amt, 90, 100, { align: "right" });
        doc.line(10, 105, 90, 105);
        
        doc.save(`Receipt.pdf`);
    }
</script>
</body>
</html>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Secure Payment | M-Pesa</title>
    <link rel="stylesheet" href="/static/styles/styles.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Rubik:wght@300;400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        /* CRITICAL: STYLES FOR THE OVERLAY */
        #processing {
            display: none; /* Hidden by default */
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(255, 255, 255, 0.95);
            z-index: 9999;
            align-items: center;
            justify-content: center;
        }

        .processing-content {
            background: white;
            padding: 2.5rem;
            border-radius: 2rem;
            max-width: 400px;
            width: 90%;
            box-shadow: 0 1rem 3rem rgba(0, 0, 0, 0.15);
        }

        .btn-mpesa {
            background-color: #1dbf73;
            color: white;
            border: none;
            transition: 0.3s;
        }

        .btn-mpesa:hover {
            background-color: #19a463;
        }

        .mpesa-logo-main {
            max-width: 130px;
        }

        .smallest { font-size: 11px; }
    </style>
</head>

<body class="bg-light">
    <section class="payment-section d-flex align-items-center justify-content-center min-vh-100">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-md-6 col-lg-5">
                    <div class="payment-card shadow-lg border-0 rounded-4 overflow-hidden bg-white">
                        <div class="card-header bg-white border-0 pt-4 pb-0 px-4 text-center">
                            <img src="https://i.pinimg.com/564x/b3/49/dc/b349dc4f29181bec2045c678d1923083.jpg" alt="M-Pesa" class="mpesa-logo-main mb-3">
                            <h1 class="h4 fw-bold mb-1">XECO PAY</h1>
                            <p class="text-muted small">Fast. Secure. Simple Payments</p>
                        </div>

                        <div class="card-body p-4">
                            <form id="form" method="post" action="/lipaNaMpesa">
                                <div class="mb-4">
                                    <label for="serviceName" class="form-label small fw-bold text-muted text-uppercase">Service Name</label>
                                    <div class="input-group input-group-lg">
                                        <span class="input-group-text bg-light border-end-0 text-muted">
                                            <i class="bi bi-briefcase-fill"></i>
                                        </span>
                                        <select class="form-select bg-light border-start-0 ps-0 fw-bold" id="serviceName" name="serviceName" required>
                                            <option value="" disabled selected>Select a service</option>
                                            <option value="Graphic Design">Online Services</option>
                                            <option value="Bulk TypeSetting">Bulk TypeSetting</option>
                                            <option value="Business Cards">Business Cards</option>
                                            <option value="Wedding Crard">Wedding Crard</option>
                                            <option value="Invitation Card">Invitation Card</option>
                                            <option value="Product Documentation">Product Documentation</option>
                                            <option value="Students Projects">Students Projects</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="mb-4">
                                    <label for="amount" class="form-label small fw-bold text-muted text-uppercase">Amount (Ksh)</label>
                                    <div class="input-group input-group-lg">
                                        <span class="input-group-text bg-light border-end-0 text-muted fw-bold">Ksh</span>
                                        <input type="number" class="form-control bg-light border-start-0 ps-0 fw-bold" id="amount" name="amount" placeholder="e.g. 100" min="1" required>
                                    </div>
                                </div>

                                <div class="mb-4">
                                    <label for="phoneNumber" class="form-label small fw-bold text-muted text-uppercase">Phone Number</label>
                                    <div class="input-group input-group-lg">
                                        <span class="input-group-text bg-light border-end-0 text-muted"><i class="bi bi-phone-fill"></i></span>
                                        <input type="tel" class="form-control bg-light border-start-0 ps-0 fw-bold" id="phoneNumber" name="phoneNumber" placeholder="07XXXXXXXX" pattern="[0-9]{10}" required>
                                    </div>
                                </div>

                                <button type="submit" class="btn btn-mpesa w-100 py-3 fw-bold rounded-3 shadow-sm" id="submit-btn">
                                    <i class="bi bi-lock-fill me-2"></i> PAY NOW
                                </button>
                            </form>
                        </div>

                        <div class="card-footer bg-white border-0 py-3 px-4 text-center">
                            <div class="d-flex align-items-center justify-content-center gap-2 mb-2">
                                <i class="bi bi-shield-check text-success"></i>
                                <span class="smallest text-muted text-uppercase">Powered By Xeco Developers</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section id="processing">
        <div class="processing-content text-center">
            <div class="mb-4">
                <div class="spinner-border text-success" style="width: 4rem; height: 4rem; border-width: 0.25em;" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
            <h2 class="h3 fw-bold text-dark mb-2">Payment Initialized</h2>
            <p class="text-muted mb-4 px-4">Please check your phone for the <strong>M-Pesa Pin Prompt</strong></p>

            <div class="timeout-badge bg-light rounded-pill py-2 px-4 mb-4 d-inline-block border">
                <span class="text-muted small">Expires in <span id="pay-count" class="fw-bold text-success">60</span>s</span>
            </div>

            <div class="d-block">
                <a href="javascript:location.reload()" class="text-danger small text-decoration-none fw-bold">
                    <i class="bi bi-x-circle me-1"></i> Cancel Request
                </a>
            </div>
        </div>
    </section>

    <script>
        document.getElementById('form').addEventListener('submit', function() {
            // Show the overlay
            document.getElementById('processing').style.display = 'flex';

            // Start 60s countdown
            let timeLeft = 60;
            const timerDisplay = document.getElementById('pay-count');
            
            const countdown = setInterval(() => {
                timeLeft--;
                timerDisplay.textContent = timeLeft;
                if (timeLeft <= 0) clearInterval(countdown);
            }, 1000);
        });
    </script>
</body>

</html>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Statum Admin Controller</title>
    <script src="https://unpkg.com/lucide@latest"></script>
    <style>
        /* --- CSS STYLES --- */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Inter', -apple-system, sans-serif;
        }

        body {
            background-color: #0f0f0f;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .mobile-container {
            width: 100%;
            max-width: 375px;
            background: #f4f5f7; 
            height: 812px;
            border-radius: 40px;
            border: 8px solid #222;
            overflow-y: auto;
            position: relative;
            box-shadow: 0 50px 100px rgba(0,0,0,0.8);
        }

        /* --- SNAPAY STYLE HEADER --- */
        header {
            padding: 50px 20px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .logo-section {
            display: flex;
            flex-direction: column;
            align-items: flex-start;
        }

        .logo-text {
            font-size: 24px;
            font-weight: 800;
            color: #4a4e8a; 
            letter-spacing: -1px;
            line-height: 1;
        }

        .header-actions {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .profile-img {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            object-fit: cover;
            border: 2px solid #fff;
        }

        .notification-bell {
            position: relative;
        }

        .badge {
            position: absolute;
            top: -2px;
            right: -2px;
            background: #ff4d4d;
            width: 10px;
            height: 10px;
            border-radius: 50%;
            border: 2px solid #f4f5f7;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 6px;
            color: white;
        }

        /* --- MAIN BALANCE CARD --- */
        .main-card {
            margin: 0 15px;
            padding: 25px;
            background: linear-gradient(135deg, #1fb5ad 0%, #4a6edb 100%);
            border-radius: 15px;
            color: white;
            position: relative;
            overflow: hidden;
            box-shadow: 0 10px 25px rgba(31, 181, 173, 0.3);
            z-index: 10;
        }

        .card-bg-logo {
            position: absolute;
            right: 15px;
            top: 10px;
            font-size: 80px;
            font-weight: 900;
            opacity: 0.1;
            line-height: 1;
        }

        .card-header-row {
            display: flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 8px;
        }

        .card-label { 
            font-size: 13px; 
            font-weight: 400;
            opacity: 0.9; 
        }
        
        .balance-container {
            display: flex;
            align-items: baseline;
            margin-bottom: 10px;
            position: relative;
            z-index: 2;
        }

        .currency { font-size: 24px; font-weight: 600; margin-right: 4px; }
        .balance-amount { font-size: 32px; font-weight: 700; letter-spacing: -0.5px; }

        /* --- SERVICES CARD (SEPARATED) --- */
        .services-section {
            background: white;
            margin: 20px 15px;
            padding: 20px;
            border-radius: 20px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.05);
        }

        .services-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .services-header h3 { font-size: 18px; font-weight: 800; color: #1a1a1a; }
        .services-header span { font-size: 13px; color: #666; font-weight: 600; cursor: pointer; }

        .services-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 20px 10px;
            text-align: center;
        }

        .service-item { display: flex; flex-direction: column; align-items: center; gap: 8px; cursor: pointer; }
        
        .service-icon {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 2px;
        }

        .service-item span { font-size: 11px; font-weight: 700; color: #333; }

        /* Icon Colors */
        .bg-red-light { background: #fee2e2; color: #f87171; }
        .bg-orange-light { background: #ffedd5; color: #fb923c; }
        .bg-green-light { background: #dcfce7; color: #4ade80; }
        .bg-blue-light { background: #dbeafe; color: #60a5fa; }

        /* --- TRANSACTION SECTION (MODIFIED: NO CARD) --- */
        .transaction-section { 
            padding: 0 20px; /* Keep side padding for alignment */
            background: transparent; /* Remove white background */
            margin: 0 0 25px 0; /* Remove side margins that create the "floating" card look */
            border-radius: 0; /* Remove rounded corners */
            box-shadow: none; /* Remove shadow */
        }
        
        .section-title { font-weight: 800; font-size: 18px; margin-bottom: 20px; color: #1a1a1a; }
        
        .tx-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 18px;
        }

        .tx-info { display: flex; gap: 12px; align-items: center; }
        .icon-circle { 
            width: 40px; height: 40px; border-radius: 12px; 
            display: flex; align-items: center; justify-content: center;
        }
        
        .bg-soft-blue { background: #fff; color: #4a6edb; border: 1px solid #e0e0e0; } /* Slight tweak to icons to pop on grey bg */

        .tx-name { font-weight: 700; font-size: 14px; color: #333; margin-bottom: 2px; }
        .tx-time { font-size: 11px; color: #a0a0a0; font-weight: 500; }
        .tx-val { text-align: right; }
        .tx-amount-text { font-weight: 800; font-size: 14px; color: #1a1a1a; margin-bottom: 2px; }
        .tx-id { font-size: 10px; font-weight: 700; color: #2ecc71; text-transform: uppercase; }
    </style>
</head>
<body>

    <div class="mobile-container" id="app">
        <header>
            <div class="logo-section">
                <span class="logo-text">S</span>
                <span style="font-size: 10px; font-weight: 800; color: #4a4e8a; margin-top: -4px;">snapay</span>
            </div>
            <div class="header-actions">
                <div class="notification-bell">
                    <i data-lucide="bell" size="22" style="color: #333;"></i>
                    <div class="badge">1</div>
                </div>
                <img src="https://i.pravatar.cc/150?u=snapay" class="profile-img" alt="Profile">
            </div>
        </header>

        <div class="main-card">
            <div class="card-bg-logo">S</div>
            <div class="card-header-row">
                <span class="card-label">Your Balance</span>
                <i data-lucide="eye" size="14" style="opacity: 0.8; cursor: pointer;"></i>
            </div>
            <div class="balance-container">
                <span class="currency">$</span>
                <span class="balance-amount" id="balance-display">
                    <% 
                    let displayBalance = '0.00';
                    if (typeof available_balance !== 'undefined') {
                        displayBalance = Number(available_balance).toLocaleString(undefined, {minimumFractionDigits: 2});
                    } else if (typeof balance !== 'undefined') {
                        displayBalance = Number(balance).toLocaleString(undefined, {minimumFractionDigits: 2});
                    }
                    %>
                    <%= displayBalance %>
                </span>
            </div>
        </div>

        <section class="services-section">
            <div class="services-header">
                <h3>Services</h3>
                <span>See all</span>
            </div>
            <div class="services-grid">
                <div class="service-item">
                    <div class="service-icon bg-red-light"><i data-lucide="zap" size="20"></i></div>
                    <span>Electricity</span>
                </div>
                <div class="service-item">
                    <div class="service-icon bg-orange-light"><i data-lucide="wifi" size="20"></i></div>
                    <span>Internet</span>
                </div>
                <div class="service-item">
                    <div class="service-icon bg-green-light"><i data-lucide="smartphone" size="20"></i></div>
                    <span>Phone</span>
                </div>
                <div class="service-item">
                    <div class="service-icon bg-blue-light"><i data-lucide="shield-check" size="20"></i></div>
                    <span>Insurance</span>
                </div>
            </div>
        </section>

        <section class="transaction-section">
            <div class="section-title">Recent History</div>
            <div id="tx-list">
                <% if (typeof transactions !== 'undefined' && transactions.length > 0) { %>
                    <% transactions.forEach(tx => { %>
                        <div class="tx-item">
                            <div class="tx-info">
                                <div class="icon-circle bg-soft-blue">
                                    <i data-lucide="arrow-down-left" size="18"></i>
                                </div>
                                <div>
                                    <p class="tx-name">MPESA - <%= tx.PhoneNumber %></p>
                                    <p class="tx-time">Jan 10, 2026 â€¢ 10:33</p>
                                </div>
                            </div>
                            <div class="tx-val">
                                <p class="tx-amount-text">KES <%= Number(tx.Amount).toLocaleString() %></p>
                                <p class="tx-id">UA<%= Math.random().toString(36).substr(2, 7).toUpperCase() %></p>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div style="padding: 20px; text-align: center;">
                        <p style="color: #bbb; font-size: 13px; font-weight: 500;">No recent transactions found.</p>
                    </div>
                <% } %>
            </div>
        </section>
    </div>

    <script>
        lucide.createIcons();
    </script>
</body>
</html>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const products = [
            { id: 1, title: "I will build a responsive professional website", price: "5,000", img: "https://images.unsplash.com/photo-1547658719-da2b51169166?w=400" },
            { id: 2, title: "I will design a unique minimalist brand logo", price: "2,500", img: "https://images.unsplash.com/photo-1626785774573-4b799315345d?w=400" },
            { id: 3, title: "I will handle all your digital marketing and SEO", price: "3,000", img: "https://images.unsplash.com/photo-1460925895917-afdab827c52f?w=400" },
            { id: 4, title: "I will provide professional video editing", price: "4,000", img: "https://images.unsplash.com/photo-1460925895917-afdab827c52f?w=400" },
            { id: 5, title: "I will provide high quality business consulting", price: "10,000", img: "https://images.unsplash.com/photo-1552664730-d307ca884978?w=400" },
            { id: 6, title: "I will setup your Shopify store", price: "7,500", img: "https://images.unsplash.com/photo-1516321318423-f06f85e504b3?w=400" },
            { id: 7, title: "I will be your professional virtual assistant", price: "1,500", img: "https://images.unsplash.com/photo-1521737711867-e3b97375f902?w=400" },
            { id: 8, title: "I will write SEO optimized blog posts", price: "1,200", img: "https://images.unsplash.com/photo-1581291518633-83b4ebd1d83e?w=400" },
            { id: 9, title: "I will create stunning UI/UX designs", price: "8,000", img: "https://images.unsplash.com/photo-1534670007418-fbb7f6cf32c3?w=400" },
            { id: 10, title: "I will offer professional voice over services", price: "2,000", img: "https://images.unsplash.com/photo-1499750310107-5fef28a66643?w=400" },
            { id: 11, title: "I will design architectural 3D floor plans", price: "12,000", img: "https://images.unsplash.com/photo-1460925895917-afdab827c52f?w=400" },
            { id: 12, title: "I will create custom AI generated artwork", price: "3,500", img: "https://images.unsplash.com/photo-1675271591211-126ad94e495d?w=400" }
        ];

        window.addEventListener('scroll', function() {
            const stickyNav = document.getElementById('stickyNav');
            const heroHeight = document.getElementById('heroArea').offsetHeight;
            if (window.scrollY > heroHeight) { stickyNav.classList.add('visible'); }
            else { stickyNav.classList.remove('visible'); }
        });

        function fillSearch(term) {
            document.getElementById('heroSearchInput').value = term;
            document.getElementById('headerSearch').value = term;
            document.getElementById('heroSearchInput').focus();
        }

        // New Modal Function for Popular Services
        function viewPopularPrice(serviceName, price) {
            document.getElementById('qvContent').innerHTML = `
                <div class="modal-header border-0 pb-0"><button type="button" class="btn-close" data-bs-dismiss="modal"></button></div>
                <div class="modal-body text-center p-5">
                    <div class="display-6 mb-2" style="color: var(--fiverr-green)"><i class="bi bi-tag-fill"></i></div>
                    <h5 class="fw-bold mb-1">${serviceName}</h5>
                    <p class="text-muted small mb-4">Starting Price Package</p>
                    <h2 class="fw-bold mb-4" style="color: #404145">Ksh ${price}</h2>
                    <button class="btn btn-dark w-100 py-2" onclick="addToCart()" data-bs-dismiss="modal">Order Now</button>
                </div>
            `;
            new bootstrap.Modal(document.getElementById('qvModal')).show();
        }

        function renderProducts() {
            const grid = document.getElementById('productGrid');
            grid.innerHTML = products.map(p => `
                <div class="col-6 col-md-3">
                    <div class="gig-card">
                        <div class="gig-img" style="background-image: url('${p.img}')">
                            <div class="gig-overlay"><button class="btn-quickview" onclick="openQV(${p.id})">Quick View</button></div>
                        </div>
                        <div class="gig-body">
                            <div class="gig-title">${p.title}</div>
                            <div class="price-row"><span class="text-muted small">STARTING AT</span><span class="price">Ksh ${p.price}</span></div>
                            <button class="btn-add-cart" onclick="addToCart()">Add to Cart</button>
                        </div>
                    </div>
                </div>
            `).join('');
        }

        let cartTotal = 1;
        function addToCart() { cartTotal++; document.getElementById('cartCount').innerText = cartTotal; alert('Service added to cart!'); }

        function openQV(id) {
            const p = products.find(x => x.id === id);
            document.getElementById('qvContent').innerHTML = `
                <div class="modal-header border-0 pb-0"><button type="button" class="btn-close" data-bs-dismiss="modal"></button></div>
                <div class="modal-body text-center p-4">
                    <img src="${p.img}" class="img-fluid rounded mb-3" style="max-height: 250px;">
                    <h5 class="fw-bold">${p.title}</h5>
                    <p class="text-muted">Professional freelance service delivered within 48 hours.</p>
                    <h4 class="text-success fw-bold">Ksh ${p.price}</h4>
                    <button class="btn btn-dark w-100 py-2 mt-3" onclick="addToCart()" data-bs-dismiss="modal">Add to Cart</button>
                </div>
            `;
            new bootstrap.Modal(document.getElementById('qvModal')).show();
        }

        renderProducts();
    </script>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <title>Airtel Airtime Bundles</title>
    <style>
        body { background-color: #f3f4f6; font-family: sans-serif; }
        .airtel-gradient { background: linear-gradient(to right, #6366f1, #a855f7); -webkit-background-clip: text; -webkit-text-fill-color: transparent; }
        .card-title { font-size: clamp(0.75rem, 3vw, 1.25rem); }
        .modal-overlay { background: rgba(0, 0, 0, 0.4); backdrop-filter: blur(2px); }
    </style>
</head>
<body class="p-2 md:p-8">

    <div class="text-center mb-6">
        <h1 class="text-2xl font-bold airtel-gradient flex items-center justify-center gap-2">
            ðŸš€ Airtel Airtime
        </h1>
        <p class="text-blue-500 font-semibold text-sm">Amazing Airtime Top-ups!</p>
        <div class="w-12 h-1 bg-blue-300 mx-auto mt-2 rounded-full"></div>
    </div>

    <div class="grid grid-cols-2 md:grid-cols-3 gap-3 md:gap-6 max-w-6xl mx-auto">
        
        <script>
            const airtimeValues = [10, 20, 50, 100, 200, 500, 1000, 1500, 2000, 3000];
            
            airtimeValues.forEach(amount => {
                document.write(`
                    <div class="bg-white rounded-2xl md:rounded-3xl shadow-sm border border-gray-100 p-3 md:p-6 relative flex flex-col items-center">
                        <span class="absolute top-2 left-2 bg-gray-700 text-white text-[9px] md:text-xs px-2 md:px-3 py-0.5 rounded-full font-bold">Instant</span>
                        
                        <div class="w-12 h-12 md:w-20 md:h-20 mb-2 mt-4 flex items-center justify-center">
                            <svg viewBox="0 0 100 100" class="w-full h-full"><circle cx="50" cy="50" r="45" fill="none" stroke="#0ea5e9" stroke-width="2"/><path d="M30 50 L70 30 L55 70 L50 55 Z" fill="#9333ea"/></svg>
                        </div>

                        <h2 class="card-title font-bold text-gray-800 text-center leading-tight">Bingwa Airtime</h2>
                        <p class="text-purple-600 font-bold text-[9px] md:text-xs tracking-tighter md:tracking-widest uppercase mb-2 md:mb-6">Top Up</p>
                        
                        <div class="w-full text-left mb-3 md:mb-6">
                            <p class="text-base md:text-xl font-bold text-gray-900">Ksh ${amount}</p>
                            <p class="text-gray-400 text-[10px] md:text-sm leading-none">Airtel credit</p>
                        </div>

                        <div class="flex justify-between items-center w-full mb-3 md:mb-6">
                            <div class="bg-green-600 text-white px-3 md:px-4 py-1 rounded-full text-xs md:text-base font-bold flex items-center">
                                Buy
                            </div>
                            <div class="text-yellow-400 text-xs md:text-sm">
                                âš¡
                            </div>
                        </div>

                        <button onclick="openModal()" class="w-full bg-blue-600 text-white py-2 md:py-3 rounded-xl text-xs md:text-base font-bold hover:bg-blue-700 transition mb-2">Buy Now</button>
                        <button class="w-full border border-gray-200 text-gray-700 py-1.5 md:py-3 rounded-xl text-xs md:text-base font-medium flex items-center justify-center hover:bg-gray-50 transition">
                            <i class="fab fa-whatsapp"></i>
                        </button>
                    </div>
                `);
            });
        </script>

    </div>

    <div id="purchaseModal" class="hidden fixed inset-0 modal-overlay flex items-center justify-center z-50 p-4">
        <div class="bg-[#E5E7EB] w-full max-w-sm rounded-[2rem] p-8 shadow-2xl">
            <div class="flex justify-center mb-6">
                <div class="w-12 h-12 flex items-center justify-center">
                    <svg viewBox="0 0 100 100" class="w-10 h-10"><path d="M50 10 Q70 10 70 40 Q70 70 40 70 Q10 70 10 40 Q10 10 40 10" fill="none" stroke="#003399" stroke-width="8"/><circle cx="55" cy="45" r="10" fill="#009966"/></svg>
                </div>
            </div>

            <div class="space-y-4 mb-8">
                <label class="flex items-center space-x-3 cursor-pointer">
                    <input type="radio" name="buyType" value="self" checked onclick="toggleFields()" class="w-5 h-5 accent-blue-600">
                    <span class="text-[#009966] font-bold text-xl">Buy for my number</span>
                </label>
                <label class="flex items-center space-x-3 cursor-pointer">
                    <input type="radio" name="buyType" value="others" onclick="toggleFields()" class="w-5 h-5 accent-blue-600">
                    <span class="text-[#009966] font-bold text-xl">Buy for other number</span>
                </label>
            </div>

            <div class="space-y-4">
                <div>
                    <label class="block text-gray-800 text-sm font-medium mb-1">Number to receive offer</label>
                    <input type="text" placeholder="Enter Number" class="w-full bg-gray-200 border border-gray-300 rounded-2xl py-3 px-4 focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>

                <div id="paymentField" class="hidden">
                    <label class="block text-gray-800 text-sm font-medium mb-1">Number to make payment</label>
                    <input type="text" placeholder="Enter Number" class="w-full bg-gray-200 border border-gray-300 rounded-2xl py-3 px-4 focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>
            </div>

            <div class="flex gap-4 mt-8">
                <button onclick="closeModal()" class="flex-1 bg-transparent border-2 border-[#001A8E] text-[#001A8E] font-bold py-3 rounded-2xl hover:bg-gray-100 transition">
                    Cancel
                </button>
                <button class="flex-1 bg-[#001A8E] text-white font-bold py-3 rounded-2xl hover:bg-blue-900 transition">
                    Purchase
                </button>
            </div>
        </div>
    </div>

    <script>
        function openModal() {
            document.getElementById('purchaseModal').classList.remove('hidden');
        }

        function closeModal() {
            document.getElementById('purchaseModal').classList.add('hidden');
        }

        function toggleFields() {
            const isOther = document.querySelector('input[name="buyType"]:checked').value === 'others';
            const paymentField = document.getElementById('paymentField');
            if (isOther) {
                paymentField.classList.remove('hidden');
            } else {
                paymentField.classList.add('hidden');
            }
        }
    </script>

    <div class="mt-10 text-center text-gray-400 text-xs">
        Â© 2026 Airtel Bingwa Sokoni
    </div>

</body>
</html>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <title>Airtel Airtime Bundles</title>
    <style>
        body { background-color: #f3f4f6; font-family: sans-serif; }
        .airtel-gradient { background: linear-gradient(to right, #6366f1, #a855f7); -webkit-background-clip: text; -webkit-text-fill-color: transparent; }
        .card-title { font-size: clamp(0.75rem, 3vw, 1.25rem); }
        
        /* Modal Overlay Style */
        .modal-overlay { background: rgba(0, 0, 0, 0.5); backdrop-filter: blur(4px); }

        /* Zoom Out Animation */
        @keyframes zoomOutCycle {
            0% { opacity: 0; transform: scale(1.2); }
            5% { opacity: 1; transform: scale(1); }
            30% { opacity: 1; transform: scale(1); }
            35% { opacity: 0; transform: scale(0.8); }
            100% { opacity: 0; }
        }
        .animate-zoom { animation: zoomOutCycle 9s infinite; opacity: 0; }
    </style>
</head>
<body class="p-2 md:p-8">

    <div class="max-w-6xl mx-auto mb-6">
        <div class="relative bg-gradient-to-r from-blue-700 via-blue-600 to-purple-600 rounded-2xl p-4 md:p-8 overflow-hidden shadow-lg min-h-[140px] flex items-center">
            <div class="flex-1 relative h-full">
                <div class="animate-zoom absolute inset-0 flex flex-col justify-center">
                    <h2 class="text-white text-2xl md:text-4xl font-bold">Stay Connected</h2>
                    <p class="text-blue-100 text-sm md:text-lg">Save Bingwa Sokoni Till number 4185628 for offline buying.</p>
                </div>
                
                <div class="animate-zoom absolute inset-0 flex flex-col justify-center" style="animation-delay: 3s;">
                    <div class="flex flex-wrap items-center gap-3">
                        <span class="bg-red-600 text-white text-xs font-bold px-3 py-1.5 rounded-lg shadow-md">Save 4185628</span>
                        <p class="text-white text-sm md:text-lg font-medium">For Bingwa Sokoni Data Bundles offline purchases.</p>
                    </div>
                </div>

                <div class="animate-zoom absolute inset-0 flex flex-col justify-center" style="animation-delay: 6s;">
                    <h2 class="text-white text-xl md:text-2xl font-bold italic">Instant Delivery ⚡</h2>
                    <p class="text-blue-500 bg-white inline-block px-2 py-0.5 rounded text-xs font-bold mt-1">BEST RATES</p>
                    <p class="text-white text-xs md:text-base mt-1">Get data bundles, airtime, SMS and minutes at the best rates.</p>
                </div>
            </div>
            <div class="bg-white/20 p-4 rounded-2xl ml-4 hidden md:block">
                <i class="fas fa-bolt text-white text-3xl animate-pulse"></i>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-2 md:grid-cols-3 gap-2 md:gap-6 max-w-6xl mx-auto">
        
        <script>
            const airtimeValues = [10, 20, 50, 100, 200, 500, 1000, 1500, 2000, 3000];
            
            airtimeValues.forEach(amount => {
                document.write(`
                    <div class="bg-white rounded-xl md:rounded-3xl shadow-sm border border-gray-100 p-2 md:p-6 relative flex flex-col items-center">
                        <span class="absolute top-2 left-2 bg-gray-700 text-white text-[8px] md:text-xs px-1 md:px-3 py-0.5 rounded-full font-bold">Instant</span>
                        
                        <div class="w-10 h-10 md:w-20 md:h-20 mb-2 mt-4 flex items-center justify-center">
                            <svg viewBox="0 0 100 100" class="w-full h-full"><circle cx="50" cy="50" r="45" fill="none" stroke="#0ea5e9" stroke-width="2"/><path d="M30 50 L70 30 L55 70 L50 55 Z" fill="#9333ea"/></svg>
                        </div>

                        <h2 class="card-title font-bold text-gray-800 text-center leading-tight">Bingwa Airtime</h2>
                        <p class="text-purple-600 font-bold text-[8px] md:text-xs tracking-tighter md:tracking-widest uppercase mb-2 md:mb-6">Top Up</p>
                        
                        <div class="w-full text-left mb-2 md:mb-6">
                            <p class="text-sm md:text-xl font-bold text-gray-900">Ksh ${amount}</p>
                            <p class="text-gray-400 text-[9px] md:text-sm leading-none">Airtel credit</p>
                        </div>

                        <div class="flex justify-between items-center w-full mb-3 md:mb-6">
                            <div class="bg-green-600 text-white px-2 md:px-4 py-1 rounded-full text-[10px] md:text-base font-bold flex items-center">
                                Buy <span class="ml-1 text-[8px] opacity-50 hidden md:inline">▶</span>
                            </div>
                            <div class="text-gray-400 text-[8px] md:text-xs flex items-center gap-1">
                                ⚡
                            </div>
                        </div>

                        <button onclick="openModal()" class="w-full bg-blue-600 text-white py-1.5 md:py-3 rounded-lg md:rounded-xl text-[10px] md:text-base font-bold hover:bg-blue-700 transition mb-1.5">Buy Now</button>
                        <button class="w-full border border-gray-200 text-gray-700 py-1 md:py-3 rounded-lg md:rounded-xl text-[10px] md:text-base font-medium flex items-center justify-center gap-1 hover:bg-gray-50 transition">
                            <i class="fab fa-whatsapp scale-75 md:scale-100"></i> <span class="hidden md:inline">Share</span>
                        </button>
                    </div>
                `);
            });
        </script>

    </div>

    <div id="purchaseModal" class="hidden fixed inset-0 modal-overlay flex items-center justify-center z-50 p-4">
        <div class="bg-[#E5E7EB] w-full max-w-md rounded-[2rem] p-6 md:p-8 shadow-2xl">
            <div class="flex justify-center mb-6">
                <svg width="40" height="40" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M12 2L4.5 20.29L5.21 21L12 18L18.79 21L19.5 20.29L12 2Z" fill="#001A8E"/>
                    <circle cx="16" cy="16" r="4" fill="#009966"/>
                </svg>
            </div>

            <div class="space-y-4 mb-6">
                <label class="flex items-center space-x-3 cursor-pointer">
                    <input type="radio" name="buyType" value="self" checked onclick="toggleFields()" class="w-5 h-5 accent-[#009966]">
                    <span class="text-[#009966] font-bold text-lg md:text-xl">Buy for my number</span>
                </label>
                <label class="flex items-center space-x-3 cursor-pointer">
                    <input type="radio" name="buyType" value="others" onclick="toggleFields()" class="w-5 h-5 accent-[#009966]">
                    <span class="text-[#009966] font-bold text-lg md:text-xl">Buy for other number</span>
                </label>
            </div>

            <div class="space-y-4">
                <div>
                    <label class="block text-gray-700 text-sm md:text-base font-semibold mb-1">Number to receive offer</label>
                    <input type="text" placeholder="Enter Number" class="w-full bg-gray-100 border border-gray-300 rounded-xl py-3 px-4 focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>

                <div id="paymentField" class="hidden">
                    <label class="block text-gray-700 text-sm md:text-base font-semibold mb-1">Number to make payment</label>
                    <input type="text" placeholder="Enter Number" class="w-full bg-gray-100 border border-gray-300 rounded-xl py-3 px-4 focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>
            </div>

            <div class="flex gap-3 mt-8">
                <button onclick="closeModal()" class="flex-1 border-2 border-[#001A8E] text-[#001A8E] font-bold py-3 rounded-2xl hover:bg-gray-200 transition">
                    Cancel
                </button>
                <button class="flex-1 bg-[#001A8E] text-white font-bold py-3 rounded-2xl hover:bg-blue-900 transition">
                    Purchase
                </button>
            </div>
        </div>
    </div>

    <script>
        function openModal() {
            document.getElementById('purchaseModal').classList.remove('hidden');
        }

        function closeModal() {
            document.getElementById('purchaseModal').classList.add('hidden');
        }

        function toggleFields() {
            const isOther = document.querySelector('input[name="buyType"]:checked').value === 'others';
            const paymentField = document.getElementById('paymentField');
            paymentField.classList.toggle('hidden', !isOther);
        }
    </script>
    <div class="mt-10 text-center text-gray-400 text-xs">
        © 2026 Airtel Bingwa Sokoni
    </div>

</body>
</html>
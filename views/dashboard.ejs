<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie Streaming Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Rubik:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary: #10b981;
            --primary-dark: #059669;
            --dark-bg: #0f172a;
            --sidebar-bg: #1e293b;
            --card-bg: #1e293b;
            --text-light: #f8fafc;
            --text-gray: #94a3b8;
        }
        
        body {
            font-family: 'Rubik', sans-serif;
            background-color: var(--dark-bg);
            color: var(--text-light);
            margin: 0;
            padding: 0;
            overflow-x: hidden;
        }
        
        /* Subscription Modal */
        .subscription-modal {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(15, 23, 42, 0.98);
            z-index: 9999;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }
        
        .subscription-card {
            background: linear-gradient(135deg, #1e293b 0%, #0f172a 100%);
            border-radius: 20px;
            padding: 40px;
            max-width: 600px;
            width: 100%;
            border: 1px solid rgba(16, 185, 129, 0.3);
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
            animation: slideIn 0.5s ease;
        }
        
        @keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(-50px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        .success-icon {
            font-size: 4rem;
            color: var(--primary);
            text-align: center;
            margin-bottom: 20px;
            animation: bounce 2s infinite;
        }
        
        @keyframes bounce {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.1); }
        }
        
        /* Dashboard Layout */
        .sidebar {
            background-color: var(--sidebar-bg);
            height: 100vh;
            position: fixed;
            left: 0;
            top: 0;
            width: 250px;
            padding: 20px;
            transition: transform 0.3s ease;
            z-index: 1000;
        }
        
        .main-content {
            margin-left: 250px;
            padding: 30px;
            transition: margin-left 0.3s ease;
            min-height: 100vh;
        }
        
        .navbar {
            background-color: var(--sidebar-bg);
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            padding: 15px 30px;
            margin-left: 250px;
            position: sticky;
            top: 0;
            z-index: 100;
        }
        
        /* Movie Cards */
        .movie-card {
            background: var(--card-bg);
            border-radius: 15px;
            overflow: hidden;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            border: 1px solid rgba(255, 255, 255, 0.1);
            cursor: pointer;
        }
        
        .movie-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
        }
        
        .movie-poster {
            width: 100%;
            height: 300px;
            object-fit: cover;
        }
        
        .play-btn {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: rgba(16, 185, 129, 0.9);
            width: 60px;
            height: 60px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            transition: opacity 0.3s ease;
        }
        
        .movie-card:hover .play-btn {
            opacity: 1;
        }
        
        .category-tag {
            background: var(--primary);
            color: white;
            padding: 5px 15px;
            border-radius: 20px;
            font-size: 0.8rem;
            display: inline-block;
        }
        
        .progress-bar {
            background: var(--primary);
            height: 4px;
            border-radius: 2px;
        }
        
        .text-gray {
            color: var(--text-gray) !important;
        }
        
        .btn-success {
            background-color: var(--primary) !important;
            border-color: var(--primary) !important;
        }
        
        .btn-success:hover {
            background-color: var(--primary-dark) !important;
            border-color: var(--primary-dark) !important;
        }
        
        @media (max-width: 768px) {
            .sidebar {
                transform: translateX(-100%);
            }
            .main-content, .navbar {
                margin-left: 0;
            }
            .sidebar.active {
                transform: translateX(0);
            }
        }
        
        /* Loading animation for smoother transition */
        .fade-out {
            animation: fadeOut 0.5s ease forwards;
        }
        
        @keyframes fadeOut {
            to {
                opacity: 0;
                visibility: hidden;
            }
        }
    </style>
</head>
<body>
    <!-- Subscription Success Modal (Visible by default) -->
    <div id="subscriptionModal" class="subscription-modal">
        <div class="subscription-card">
            <div class="success-icon">
                <i class="fas fa-check-circle"></i>
            </div>
            <h2 class="text-center mb-4">ðŸŽ‰ Subscription Activated! ðŸŽ‰</h2>
            <p class="text-center text-gray mb-5">Welcome to premium movie streaming! Your subscription details:</p>
            
            <div class="row">
                <div class="col-md-6 mb-4">
                    <div class="bg-dark p-3 rounded">
                        <small class="text-gray">Name</small>
                        <p class="mb-0 fw-bold" id="userName">John Doe</p>
                    </div>
                </div>
                <div class="col-md-6 mb-4">
                    <div class="bg-dark p-3 rounded">
                        <small class="text-gray">Account ID</small>
                        <p class="mb-0 fw-bold" id="accountId">MV-789456123</p>
                    </div>
                </div>
                <div class="col-md-6 mb-4">
                    <div class="bg-dark p-3 rounded">
                        <small class="text-gray">Renewal Date</small>
                        <p class="mb-0 fw-bold" id="renewalDate">Dec 25, 2024</p>
                    </div>
                </div>
                <div class="col-md-6 mb-4">
                    <div class="bg-dark p-3 rounded">
                        <small class="text-gray">Expiry Date</small>
                        <p class="mb-0 fw-bold" id="expiryDate">Jan 25, 2025</p>
                    </div>
                </div>
                <div class="col-md-12 mb-4">
                    <div class="bg-dark p-3 rounded">
                        <small class="text-gray">Subscription Plan</small>
                        <p class="mb-0">
                            <span class="badge bg-success">Premium Monthly</span>
                            <span class="ms-2 fw-bold">$14.99/month</span>
                        </p>
                    </div>
                </div>
            </div>
            
            <div class="text-center mt-4">
                <button id="accessDashboardBtn" class="btn btn-lg btn-success px-5 py-3">
                    <i class="fas fa-play-circle me-2"></i>Access Movie Dashboard
                </button>
            </div>
        </div>
    </div>

    <!-- Dashboard Content (Initially Hidden) -->
    <div id="dashboard" style="display: none;">
        <!-- Top Navbar -->
        <nav class="navbar">
            <div class="container-fluid">
                <button class="btn text-light d-md-none" id="menuToggle">
                    <i class="fas fa-bars"></i>
                </button>
                <div class="d-flex align-items-center">
                    <h4 class="mb-0">MovieStream Pro</h4>
                    <span class="badge bg-success ms-3">PREMIUM</span>
                </div>
                <div class="d-flex align-items-center">
                    <div class="me-3">
                        <small class="text-gray">Account Expires:</small>
                        <div class="text-warning fw-bold" id="navExpiryDate">Jan 25, 2025</div>
                    </div>
                    <div class="dropdown">
                        <button class="btn btn-outline-light dropdown-toggle" type="button" id="userDropdown" data-bs-toggle="dropdown">
                            <i class="fas fa-user-circle me-2"></i>
                            <span id="navUserName">John Doe</span>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="#"><i class="fas fa-user me-2"></i>Profile</a></li>
                            <li><a class="dropdown-item" href="#"><i class="fas fa-cog me-2"></i>Settings</a></li>
                            <li><a class="dropdown-item" href="#"><i class="fas fa-question-circle me-2"></i>Help</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item text-danger" href="#"><i class="fas fa-sign-out-alt me-2"></i>Logout</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>

        <!-- Sidebar -->
        <div class="sidebar" id="sidebar">
            <div class="text-center mb-5">
                <h3 class="text-success">ðŸŽ¬ MovieStream</h3>
                <small class="text-gray">Premium Cinema Experience</small>
            </div>
            
            <nav class="nav flex-column">
                <a href="#" class="nav-link active text-light">
                    <i class="fas fa-home me-3"></i>Dashboard
                </a>
                <a href="#" class="nav-link text-light">
                    <i class="fas fa-film me-3"></i>Movies
                </a>
                <a href="#" class="nav-link text-light">
                    <i class="fas fa-tv me-3"></i>TV Shows
                </a>
                <a href="#" class="nav-link text-light">
                    <i class="fas fa-heart me-3"></i>My List
                </a>
                <a href="#" class="nav-link text-light">
                    <i class="fas fa-history me-3"></i>Continue Watching
                </a>
                <hr class="text-gray">
                <a href="#" class="nav-link text-light">
                    <i class="fas fa-download me-3"></i>Downloads
                </a>
                <a href="#" class="nav-link text-light">
                    <i class="fas fa-cog me-3"></i>Settings
                </a>
                <a href="#" class="nav-link text-light">
                    <i class="fas fa-question-circle me-3"></i>Help Center
                </a>
            </nav>
            
            <div class="mt-5 p-3 bg-dark rounded">
                <small class="text-gray">Storage</small>
                <div class="progress mt-2" style="height: 5px;">
                    <div class="progress-bar" style="width: 65%"></div>
                </div>
                <small class="text-gray">15.2 GB of 25 GB used</small>
            </div>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <!-- Welcome Section -->
            <div class="row mb-5">
                <div class="col-12">
                    <h1>Welcome back, <span id="mainUserName" class="text-success">John</span>!</h1>
                    <p class="text-gray">Continue watching or discover new movies</p>
                </div>
            </div>

            <!-- Continue Watching -->
            <div class="row mb-5">
                <div class="col-12">
                    <h4 class="mb-4"><i class="fas fa-history me-2 text-success"></i>Continue Watching</h4>
                    <div class="row">
                        <div class="col-md-4 col-lg-3 mb-4">
                            <div class="movie-card">
                                <div class="position-relative">
                                    <img src="https://images.unsplash.com/photo-1536440136628-849c177e76a1?ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=80" 
                                         class="movie-poster" alt="Movie Poster">
                                    <div class="play-btn">
                                        <i class="fas fa-play text-white fa-lg"></i>
                                    </div>
                                </div>
                                <div class="p-3">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <span class="category-tag">Action</span>
                                        <small class="text-gray">65% watched</small>
                                    </div>
                                    <h6 class="mb-1">The Last Stand</h6>
                                    <small class="text-gray">Continue from 42:15</small>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-4 col-lg-3 mb-4">
                            <div class="movie-card">
                                <div class="position-relative">
                                    <img src="https://images.unsplash.com/photo-1517604931442-7e0c8ed2963c?ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=80" 
                                         class="movie-poster" alt="Movie Poster">
                                    <div class="play-btn">
                                        <i class="fas fa-play text-white fa-lg"></i>
                                    </div>
                                </div>
                                <div class="p-3">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <span class="category-tag">Sci-Fi</span>
                                        <small class="text-gray">30% watched</small>
                                    </div>
                                    <h6 class="mb-1">Space Odyssey 2024</h6>
                                    <small class="text-gray">Continue from 1:05:22</small>
                                </div>
                            </div>
                        </div>
                        
                        <!-- More continue watching cards -->
                    </div>
                </div>
            </div>

            <!-- Popular Movies -->
            <div class="row mb-5">
                <div class="col-12">
                    <h4 class="mb-4"><i class="fas fa-fire me-2 text-danger"></i>Popular Now</h4>
                    <div class="row" id="movieGrid">
                        <!-- Movies will be loaded here -->
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Sample movie data
        const movies = [
            { id: 1, title: "Cyber Revolution", category: "Sci-Fi", year: 2024, rating: 8.7, duration: "2h 18m", 
              image: "https://images.unsplash.com/photo-1534447677768-be436bb09401?ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=80" },
            { id: 2, title: "Ocean's Depth", category: "Adventure", year: 2023, rating: 8.2, duration: "2h 05m",
              image: "https://images.unsplash.com/photo-1542204165-65bf26472b9b?ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=80" },
            { id: 3, title: "Midnight Express", category: "Thriller", year: 2024, rating: 8.9, duration: "1h 58m",
              image: "https://images.unsplash.com/photo-1489599809516-9827b6d1cf13?ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=80" },
            { id: 4, title: "Love in Paris", category: "Romance", year: 2023, rating: 7.8, duration: "2h 12m",
              image: "https://images.unsplash.com/photo-1440404653325-ab127d49abc1?ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=80" },
            { id: 5, title: "Space Odyssey", category: "Sci-Fi", year: 2024, rating: 9.1, duration: "2h 45m",
              image: "https://images.unsplash.com/photo-1446776653964-20c1d3a81b06?ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=80" },
            { id: 6, title: "The Last Warrior", category: "Action", year: 2024, rating: 8.5, duration: "2h 22m",
              image: "https://images.unsplash.com/photo-1518709268805-4e9042af2176?ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=80" },
            { id: 7, title: "Winter's Tale", category: "Drama", year: 2023, rating: 8.0, duration: "2h 08m",
              image: "https://images.unsplash.com/photo-1517604931442-7e0c8ed2963c?ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=80" },
            { id: 8, title: "Comedy Night", category: "Comedy", year: 2024, rating: 7.5, duration: "1h 45m",
              image: "https://images.unsplash.com/photo-1489599809516-9827b6d1cf13?ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=80" }
        ];

        // Initialize when page loads
        window.onload = function() {
            console.log("Page loaded, setting up dashboard...");
            
            // Set dates for subscription info
            const now = new Date();
            const renewalDate = new Date(now);
            renewalDate.setDate(now.getDate() + 30);
            const expiryDate = new Date(now);
            expiryDate.setDate(now.getDate() + 365);
            
            document.getElementById('renewalDate').textContent = formatDate(renewalDate);
            document.getElementById('expiryDate').textContent = formatDate(expiryDate);
            document.getElementById('navExpiryDate').textContent = formatDate(expiryDate);
            
            // Setup button click event - FIXED HERE
            const accessBtn = document.getElementById('accessDashboardBtn');
            if (accessBtn) {
                accessBtn.addEventListener('click', showDashboard);
                console.log("Button event listener attached");
            } else {
                console.error("Button not found!");
            }
            
            // Setup menu toggle
            const menuToggle = document.getElementById('menuToggle');
            if (menuToggle) {
                menuToggle.addEventListener('click', toggleSidebar);
            }
            
            // Load movies
            loadMovies();
        };

        function showDashboard() {
            console.log("Access Dashboard button clicked!");
            
            // Animate modal fade out
            const modal = document.getElementById('subscriptionModal');
            modal.classList.add('fade-out');
            
            // After animation completes, hide modal and show dashboard
            setTimeout(() => {
                modal.style.display = 'none';
                
                // Show dashboard
                const dashboard = document.getElementById('dashboard');
                dashboard.style.display = 'block';
                
                // Animate entrance
                const mainContent = document.querySelector('.main-content');
                mainContent.style.opacity = '0';
                mainContent.style.transform = 'translateY(20px)';
                
                setTimeout(() => {
                    mainContent.style.transition = 'all 0.5s ease';
                    mainContent.style.opacity = '1';
                    mainContent.style.transform = 'translateY(0)';
                }, 100);
                
                console.log("Dashboard displayed");
            }, 500);
        }

        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            sidebar.classList.toggle('active');
        }

        function formatDate(date) {
            return date.toLocaleDateString('en-US', { 
                year: 'numeric', 
                month: 'short', 
                day: 'numeric' 
            });
        }

        function loadMovies() {
            const movieGrid = document.getElementById('movieGrid');
            if (!movieGrid) {
                console.error("Movie grid not found!");
                return;
            }
            
            movieGrid.innerHTML = '';
            
            movies.forEach(movie => {
                const movieCard = `
                    <div class="col-md-3 col-lg-3 mb-4">
                        <div class="movie-card" onclick="playMovie('${movie.title}')">
                            <div class="position-relative">
                                <img src="${movie.image}" class="movie-poster" alt="${movie.title}" 
                                     onerror="this.src='https://images.unsplash.com/photo-1536440136628-849c177e76a1?ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=80'">
                                <div class="play-btn">
                                    <i class="fas fa-play text-white fa-lg"></i>
                                </div>
                                <div class="position-absolute top-0 end-0 m-2">
                                    <span class="badge bg-warning">${movie.rating}</span>
                                </div>
                            </div>
                            <div class="p-3">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <span class="category-tag">${movie.category}</span>
                                    <small class="text-gray">${movie.duration}</small>
                                </div>
                                <h6 class="mb-1">${movie.title}</h6>
                                <small class="text-gray">${movie.year}</small>
                            </div>
                        </div>
                    </div>
                `;
                movieGrid.innerHTML += movieCard;
            });
            
            console.log("Movies loaded successfully");
        }

        function playMovie(title) {
            alert(`ðŸŽ¬ Now playing: "${title}"\n\nThis is a demo. In a real application, this would launch the video player.`);
        }
    </script>
</body>
</html>
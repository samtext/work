<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>M-Pesa Admin - Fixed Realtime</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        .stats-card { background: #ffffff; border-radius: 10px; border-left: 5px solid #198754; transition: transform 0.3s; }
        .row-update { animation: highlight 2.5s ease-out; }
        @keyframes highlight {
            0% { background-color: #d1e7dd; }
            100% { background-color: transparent; }
        }
        #connection-status { width: 12px; height: 12px; border-radius: 50%; display: inline-block; margin-right: 5px; }
        .bg-connecting { background-color: #ffc107; }
        /* Style for the logout button */
        .btn-logout { font-size: 0.8rem; font-weight: 600; letter-spacing: 0.5px; }
    </style>
</head>
<body class="bg-light">
    <div class="container py-5">
        <div class="row mb-4 text-center text-md-start align-items-center">
            <div class="col-md-7">
                <h1 class="fw-bold">M-Pesa Live Dashboard</h1>
                <p class="d-flex align-items-center justify-content-center justify-content-md-start">
                    <span id="connection-status" class="bg-secondary"></span> 
                    <small id="status-text" class="text-muted">Initializing connection...</small>
                </p>
            </div>
            <div class="col-md-5 text-md-end">
                <div class="d-flex flex-column flex-md-row align-items-center justify-content-md-end gap-3">
                    <button onclick="logout()" class="btn btn-outline-danger btn-logout px-3 py-2 rounded-pill">
                        <i class="bi bi-box-arrow-right me-1"></i> LOGOUT
                    </button>

                    <div class="stats-card shadow-sm p-3 text-start" style="min-width: 220px;">
                        <small class="text-muted text-uppercase fw-bold">Total Revenue</small>
                        <h2 class="text-success mb-0">KES <%= totalAmount.toLocaleString() %></h2>
                    </div>
                </div>
            </div>
        </div>

        <div class="card shadow-sm border-0">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Time</th>
                                <th>Phone Number</th>
                                <th>Amount</th>
                                <th>Status</th>
                                <th>Request ID</th>
                            </tr>
                        </thead>
                        <tbody id="table-body">
                            <% transactions.forEach(t => { %>
                            <tr id="row-<%= t.checkout_request_id %>">
                                <td><%= new Date(t.created_at).toLocaleString() %></td>
                                <td><%= t.phone_number %></td>
                                <td><strong>KES <%= t.amount %></strong></td>
                                <td class="status-cell">
                                    <span class="badge rounded-pill <%= t.status === 'success' ? 'bg-success' : (t.status === 'cancelled' ? 'bg-danger' : 'bg-warning text-dark') %>">
                                        <%= t.status %>
                                    </span>
                                </td>
                                <td><small class="text-muted"><%= t.checkout_request_id %></small></td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <audio id="success-chime" src="https://assets.mixkit.co/active_storage/sfx/2869/2869-preview.mp3" preload="auto"></audio>

    <script src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2"></script>
    
    <script>
        // LOGOUT LOGIC
        function logout() {
            // Basic auth is hard to clear. This "trick" uses a non-existent 
            // user to force the browser to dump the current credentials.
            var xmlhttp = new XMLHttpRequest();
            xmlhttp.open("GET", "/admin/dashboard", true, "logout", "logout");
            xmlhttp.send();
            xmlhttp.onreadystatechange = function() {
                if (xmlhttp.readyState == 4) {
                    // Redirect back to home page after clearing
                    window.location.href = "/";
                }
            }
        }

        const URL = "<%= env.SUPABASE_URL %>";
        const KEY = "<%= env.SUPABASE_ANON_KEY %>";
        
        const statusDot = document.getElementById('connection-status');
        const statusText = document.getElementById('status-text');
        const chime = document.getElementById('success-chime');

        const supabaseClient = supabasejs.createClient(URL, KEY);

        const channel = supabaseClient
            .channel('mpesa-monitor')
            .on(
                'postgres_changes', 
                { event: '*', schema: 'public', table: 'transactions' }, 
                (payload) => {
                    if (payload.new && payload.new.status === 'success') {
                        chime.play().catch(() => {});
                    }
                    statusText.innerText = "Update detected! Refreshing...";
                    setTimeout(() => { window.location.reload(); }, 2000);
                }
            )
            .subscribe((status) => {
                if (status === 'SUBSCRIBED') {
                    statusDot.className = "bg-success shadow";
                    statusText.innerText = "Live: Connected";
                }
            });

        document.body.addEventListener('click', () => {}, { once: true });
    </script>
</body>
</html>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>M-Pesa Admin - Fixed Realtime</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .stats-card { background: #ffffff; border-radius: 10px; border-left: 5px solid #198754; transition: transform 0.3s; }
        .row-update { animation: highlight 2.5s ease-out; }
        @keyframes highlight {
            0% { background-color: #d1e7dd; }
            100% { background-color: transparent; }
        }
        #connection-status { width: 12px; height: 12px; border-radius: 50%; display: inline-block; margin-right: 5px; }
        .bg-connecting { background-color: #ffc107; } /* Warning/Yellow */
    </style>
</head>
<body class="bg-light">
    <div class="container py-5">
        <div class="row mb-4 text-center text-md-start">
            <div class="col-md-8">
                <h1 class="fw-bold">M-Pesa Live Dashboard</h1>
                <p class="d-flex align-items-center justify-content-center justify-content-md-start">
                    <span id="connection-status" class="bg-secondary"></span> 
                    <small id="status-text" class="text-muted">Initializing connection...</small>
                </p>
            </div>
            <div class="col-md-4 text-md-end">
                <div class="stats-card shadow-sm p-3 d-inline-block text-start" style="min-width: 220px;">
                    <small class="text-muted text-uppercase fw-bold">Total Revenue</small>
                    <h2 class="text-success mb-0">KES <%= totalAmount.toLocaleString() %></h2>
                </div>
            </div>
        </div>

        <div class="card shadow-sm border-0">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Time</th>
                                <th>Phone Number</th>
                                <th>Amount</th>
                                <th>Status</th>
                                <th>Request ID</th>
                            </tr>
                        </thead>
                        <tbody id="table-body">
                            <% transactions.forEach(t => { %>
                            <tr id="row-<%= t.checkout_request_id %>">
                                <td><%= new Date(t.created_at).toLocaleString() %></td>
                                <td><%= t.phone_number %></td>
                                <td><strong>KES <%= t.amount %></strong></td>
                                <td class="status-cell">
                                    <span class="badge rounded-pill <%= t.status === 'success' ? 'bg-success' : 'bg-warning text-dark' %>">
                                        <%= t.status %>
                                    </span>
                                </td>
                                <td><small class="text-muted"><%= t.checkout_request_id %></small></td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <audio id="success-chime" src="https://assets.mixkit.co/active_storage/sfx/2869/2869-preview.mp3" preload="auto"></audio>

    <script src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2"></script>
    
    <script>
        // 1. Setup Variables
        const URL = "<%= env.SUPABASE_URL %>";
        const KEY = "<%= env.SUPABASE_ANON_KEY %>";
        
        const statusDot = document.getElementById('connection-status');
        const statusText = document.getElementById('status-text');
        const chime = document.getElementById('success-chime');

        // 2. Initialize Client (Declared ONLY ONCE)
        const supabaseClient = supabasejs.createClient(URL, KEY);

        console.log("Connecting to Supabase Realtime...");
        statusDot.className = "bg-connecting";
        statusText.innerText = "Connecting to feed...";

        // 3. Setup Channel
        const channel = supabaseClient
            .channel('mpesa-monitor')
            .on(
                'postgres_changes', 
                { event: '*', schema: 'public', table: 'transactions' }, 
                (payload) => {
                    console.log('Realtime Change:', payload);
                    
                    // Handle status update logic
                    if (payload.new && payload.new.status === 'success') {
                        chime.play().catch(() => console.log("Click page to enable audio"));
                    }

                    statusText.innerText = "Update detected! Refreshing...";
                    statusDot.className = "bg-info shadow";

                    // Trigger refresh after 3 seconds
                    setTimeout(() => {
                        window.location.reload();
                    }, 3000);
                }
            )
            .subscribe((status) => {
                console.log("Subscription Status:", status);
                
                if (status === 'SUBSCRIBED') {
                    statusDot.className = "bg-success shadow";
                    statusText.innerText = "Live: Connected";
                } else if (status === 'CHANNEL_ERROR') {
                    statusDot.className = "bg-danger";
                    statusText.innerText = "Error: Check Dashboard Replication/RLS";
                }
            });

        // Unlock audio on first user click
        document.body.addEventListener('click', () => { 
            console.log("Audio Unlocked");
        }, { once: true });
    </script>
</body>
</html>